
{% extends 'base.html.twig' %}


    {% block root %}
        <section class="content">

            <div class="row">
                <div >

                    <!-- Profile Image -->
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <img class="profile-user-img img-responsive img-circle" src="{{ asset('bundles/dist/img/'~app.user.email~'.jpg') }}" alt="User profile picture">

                            <h3 class="profile-username text-center">{{ app.user.member.getFirstName }} {{ app.user.member.getLastName }}</h3>

                            <p class="text-muted text-center">System Administrator</p>

                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>{{ app.user.member.getEmail }}</b> <a class="pull-right"></a>
                                </li>
                                <li class="list-group-item">
                                    <b>{{ app.user.member.getFacultyname }}</b> <a class="pull-right"></a>
                                </li>
                                <li class="list-group-item">
                                    <b>{{ app.user.member.getGender }} </b> <a class="pull-right"></a>
                                <li class="list-group-item">
                                    <b>{{ app.user.member.getBirthDay }} </b> <a class="pull-right"></a>
                                </li>

                            </ul>


                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}




